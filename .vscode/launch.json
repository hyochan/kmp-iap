{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Android Debug (Auto)",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_android.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Android Debug",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_android.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "iOS Simulator",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_ios.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "iOS Device",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_ios_device.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "iOS Device (Open in Xcode)",
      "request": "launch",
      "type": "node-terminal",
      "command": "${workspaceFolder}/.vscode/run_ios_device_xcode.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Desktop Debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/example/gradlew",
      "args": ["composeApp:run"],
      "cwd": "${workspaceFolder}/example",
      "console": "integratedTerminal"
    },
    {
      "name": "Docs - Start Dev Server",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd docs && npm start",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Docs - Build",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd docs && npm run build",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Docs - Serve Production Build",
      "request": "launch",
      "type": "node-terminal",
      "command": "cd docs && npm run serve",
      "cwd": "${workspaceFolder}"
    }
  ]
}
